            <!-- Pagination Controls -->
            <div class="pagination-controls mt-4">
                <button class="btn " style="background: rgb(21, 1, 75); color: white;" id="prev-page"
                    onclick="prevPage()">Previous</button>
                <span id="page-info"
                    style="border: 1px solid rgb(116, 113, 113); border-radius: 5px; padding: 5px;"></span>
                <button class="btn " style="background: rgb(21, 1, 75); color: white;" id="next-page"
                    onclick="nextPage()">Next</button>
            </div>
        </div>




        <!-- Add Product Page -->
        <div id="add-product-page" style="display: none;">

            <div class="p-5">
                <h2>Add Product</h2>
                <form id="addProductForm">
                    <div class="form-group">
                        <label for="productName">Product Name</label>
                        <input type="text" class="form-control" id="productName" required>
                    </div>
                    <div class="form-group">
                        <label for="productDescription">Description</label>
                        <textarea class="form-control" id="productDescription" maxlength="500" required></textarea>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="editProductPrice">Price</label>
                            <input type="number" class="form-control" id="editProductPrice" required>
                        </div>
                        <div class="form-group position-relative col-md-6">
                            <label for="editProductCategory">Category</label>
                            <select class="form-control" id="editProductCategory" required>
                                <option value="" selected>Select a category</option>
                                <option>Category 1</option>
                                <option>Category 2</option>
                                <!-- Add more categories as needed -->
                            </select>
                            <i class="fa fa-chevron-down position-absolute"
                                style="top: 40px; right: 20px; pointer-events: none;"></i>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="editProductSize">Size</label>
                            <input type="text" class="form-control" id="editProductSize" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="editProductColor">Color</label>
                            <input type="text" class="form-control" id="editProductColor" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="editProductQuantity">Stock Quantity</label>
                            <input type="number" class="form-control" id="editProductQuantity" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="editDateAdded">Date Added</label>
                            <input type="date" class="form-control" id="editDateAdded" required>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="editStockStatus">Status</label>
                        <select class="form-control" id="editStockStatus" required>
                            <option value="" selected>Select a status</option>
                            <option>In Stock</option>
                            <option>Out of Stock</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <!-- Image Upload and Cropping Section -->
                        <div class="img-container">

                            <div class="form-container mb-4">
                                <!-- File Input to Upload Image -->
                                <div class="mb-3 col-md-6">
                                    <label for="new-image" class="form-label">Upload New Image</label>
                                    <input type="file" class="form-control" id="new-image" accept="image/*">
                                </div>

                                <!-- Image Container for Cropping -->
                                <div class="image-container">
                                    <img id="image" src="" alt="Upload an image to crop">
                                </div>

                                <!-- Buttons for Crop and Delete -->
                                <button type="button" class="btn btn-success" id="crop-btn">Crop & Save Image</button>
                                <button type="button" class="btn btn-danger" id="delete-btn">Delete Image</button>

                                <!-- Preview for Cropped Image -->
                                <div class="mt-3">
                                    <h5>Cropped Image Preview:</h5>
                                    <img id="cropped-preview" src="" alt="Cropped image preview">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Add Product</button>
                    <button type="button" class="btn btn-secondary mt-3" onclick="hideAddProductPage()">Cancel</button>
                </form>
            </div>
        </div>



        <!-- View Product Page -->
        <div id="view-product-page" style="display: none;">
