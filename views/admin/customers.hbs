        <!-- Edit Customer Details -->
<div id="editCustomerDetails" style="display: none;">
    <div class="p-5 border rounded shadow-sm" style="background-color: #f8f9fa;">
        <h2 class="text-center mb-4">Edit Customer</h2>
        <form id="editCustomerForm">
            <div class="mb-4">
                <div class="mb-3">
                    <label for="editCustomerId" class="form-label"><strong>Customer ID:</strong></label>
                    <span id="editCustomerId" class="form-control-plaintext">1</span>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="editCustomerName" class="form-label"><strong>Name:</strong></label>
                        <input type="text" class="form-control" id="editCustomerName" placeholder="Enter customer name" required>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="editCustomerEmail" class="form-label"><strong>Email:</strong></label>
                        <input type="email" class="form-control" id="editCustomerEmail" placeholder="Enter customer email" required>
                    </div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="editCustomerPhone" class="form-label"><strong>Phone:</strong></label>
                        <input type="text" class="form-control" id="editCustomerPhone" placeholder="Enter phone number" required>
                    </div>
                    <div class="mb-3 col-md-6">
                        <label for="editAddressId" class="form-label"><strong>Address :</strong></label>
                        <textarea class="form-control" id="editAddressId" rows="1" placeholder="Enter address"  required></textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6 ">
                        <label for="editCity" class="form-label"><strong>City:</strong></label>
                        <input type="text" class="form-control" id="editCity" placeholder="Enter city" required>
                    </div>
                    <div class="mb-3 col-md-6 ">
                        <label for="editState" class="form-label"><strong>State:</strong></label>
                        <input type="text" class="form-control" id="editState" placeholder="Enter state" required>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="editPincode" class="form-label"><strong>Pin Code:</strong></label>
                        <input type="text" class="form-control" id="editPincode" placeholder="Enter pin code" required>
                    </div>
                    <div class="mb-3 col-md-6 ">
                        <label for="editCountry" class="form-label"><strong>Country:</strong></label>
                        <input type="text" class="form-control" id="editCountry" placeholder="Enter country" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="editStatus" class="form-label"><strong>Status:</strong></label>
                    <select class="form-select" id="editStatus" required>
                        <option value="" disabled selected>Select status</option>
                        <option value="active">Active</option>
                        <option value="inactive">Inactive</option>
                        <option value="pending">Pending</option>
                        <option value="suspended">Suspended</option>
                    </select>
                </div>
                
            </div>
            <div class="text-center">
                <button type="button" class="btn btn-danger me-2" onclick="closeEditCustomer()">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveCustomerChanges" onclick="saveCustomerChanges()">Save Changes</button>
            </div>
        </form>
