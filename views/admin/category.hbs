<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/admin/public/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />

    <title>Knitzy - Category</title>

</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm">
        <a class="navbar-brand" href="#">
            <h4 class="navbar-logo text-white">Knitzy</h4>
        </a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link text-white logout-btn" href="#">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar">
        <nav class="nav flex-column">
            <a class="nav-link" href="#" id="dashboard-link"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
            <a class="nav-link" href="#" id="orders-link"><i class="fas fa-box"></i> Orders</a>
            <a class="nav-link" href="#" id="products-link"><i class="fa-solid fa-dolly fas"></i> Products</a>
            <a class="nav-link" href="#" id="customers-link"><i class="fas fa-users"></i> Customers</a>
            <a class="nav-link" href="#" id="offers-link"><i class="fas fa-gift"></i> Offers</a>
            <a class="nav-link" href="#" id="coupons-link"><i class="fas fa-ticket-alt"></i> Coupons</a>
            <a class="nav-link" href="#" id="categories-link"><i class="fas fa-list"></i> Categories</a>
        </nav>
    </div>

    <!-- Content -->
    <div class="content">
        <!-- Category Section -->
        <div id="categorySection" class="container mt-5">
            <h2>Categories</h2>
            <div class="search-filter mb-3">
                <input type="text" id="searchCategory" placeholder="Search Categories"
                    class="form-control d-inline-block" style="width: 300px;" />
                <button id="filterBtn" class="btn btn-secondary">Filter</button>
                <button id="addCategoryBtn" class="btn btn-primary" onclick="showAddCategoryPage()">Add
                    Category</button>
            </div>

            <table class="table table-bordered table-hover mt-3">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th>Image</th>
                        <th>Date Added</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="categoryTableBody">
                    <tr>
                        <td>1</td>
                        <td>Animal</td>
                        <td><img src="/admin/public/images/Animal.jpg" alt="Animal Image"
                                style="width: 50px; height: 50px;"></td>
                        <td>2024-01-10</td>
                        <td>Active</td>
                        <td>
                            <button class="viewBtn btn btn-info" onclick="showViewCategoryPage(1)">View</button>
                            <button class="editBtn btn btn-warning" onclick="showEditCategoryPage(1)">Edit</button>
                            <button class="deleteBtn btn btn-danger" onclick="confirmDelete(1)">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Fantasy</td>
                        <td><img src="/admin/public/images/Fantasy.png" alt="Fantasy Image"
                                style="width: 50px; height: 50px;"></td>
                        <td>2024-01-12</td>
                        <td>Inactive</td>
                        <td>
                            <button class="viewBtn btn btn-info" onclick="showViewCategoryPage(2)">View</button>
                            <button class="editBtn btn btn-warning" onclick="showEditCategoryPage(2)">Edit</button>
                            <button class="deleteBtn btn btn-danger" onclick="confirmDelete(2)">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>3</td>
                        <td>Amigurumi Animals</td>
                        <td><img src="/admin/public/images/Amigurumi.png" alt="Amigurumi Animals Image" style="width: 50px; height: 50px;"></td>
                        <td>2024-02-01</td>
                        <td>Active</td>
                        <td>
                            <button class="viewBtn btn btn-info" onclick="showViewCategoryPage(3)">View</button>
                            <button class="editBtn btn btn-warning" onclick="showEditCategoryPage(3)">Edit</button>
                            <button class="deleteBtn btn btn-danger" onclick="confirmDelete(3)">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>4</td>
                        <td>Crochet Flowers</td>
                        <td><img src="/admin/public/images/Flower.png" alt="Crochet Flowers Image" style="width: 50px; height: 50px;"></td>
                        <td>2024-02-10</td>
                        <td>Active</td>
                        <td>
                            <button class="viewBtn btn btn-info" onclick="showViewCategoryPage(5)">View</button>
                            <button class="editBtn btn btn-warning" onclick="showEditCategoryPage(5)">Edit</button>
                            <button class="deleteBtn btn btn-danger" onclick="confirmDelete(5)">Delete</button>
                        </td>
                    </tr>
                    <tr>
                        <td>5</td>
                        <td>Baby Toys</td>
                        <td><img src="/admin/public/images/Baby_toys.png" alt="Baby Toys Image" style="width: 50px; height: 50px;"></td>
                        <td>2024-02-15</td>
                        <td>Inactive</td>
                        <td>
                            <button class="viewBtn btn btn-info" onclick="showViewCategoryPage(6)">View</button>
                            <button class="editBtn btn btn-warning" onclick="showEditCategoryPage(6)">Edit</button>
                            <button class="deleteBtn btn btn-danger" onclick="confirmDelete(6)">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>

            <!-- Pagination Controls -->
            <div class="pagination-controls mt-4">
                <button class="btn " style="background: rgb(21, 1, 75); color: white;" id="prev-page"
                    onclick="prevPage()">Previous</button>
                <span id="page-info"
                    style="border: 1px solid rgb(116, 113, 113); border-radius: 5px; padding: 5px;"></span>
                <button class="btn " style="background: rgb(21, 1, 75); color: white;" id="next-page"
                    onclick="nextPage()">Next</button>
            </div>

        </div>

        <!-- Add Category Modal -->
        <div id="addCategoryModal" style="display: none;">

            <div class="d-flex justify-content-center align-items-center">
                <div class="p-5 col-md-6 border rounded shadow-sm" style="background-color: #f8f9fa;">
                    <h2>Add Category</h2>
                    <form id="addCategoryForm">
                        <div class="mb-3">
                            <label for="addCategoryName">Category Name:</label>
                            <input type="text" class="form-control" id="addCategoryName" required />
                        </div>
                        <div class="mb-3">
                            <label for="addCategoryDescription">Description:</label>
                            <textarea class="form-control" id="addCategoryDescription" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="addCategoryDate">Date Added:</label>
                            <input type="date" class="form-control" id="addCategoryDate" required />
                        </div>
                        <div class="mb-3">
                            <label for="addCategoryStatus">Status:</label>
                            <select class="form-control" id="addCategoryStatus" required>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <!-- Image Upload and Cropping Section -->
                            <div class="img-container">

                                <div class="form-container mb-4">
                                    <!-- File Input to Upload Image -->
                                    <div class="mb-3 col-md-6">
                                        <label for="new-image" class="form-label">Upload New Image</label>
                                        <input type="file" class="form-control" id="new-image" accept="image/*">
                                    </div>

                                    <!-- Image Container for Cropping -->
                                    <div class="image-container">
                                        <img id="image" src="" alt="Upload an image to crop">
                                    </div>

                                    <!-- Buttons for Crop and Delete -->
                                    <button type="button" class="btn btn-success" id="crop-btn">Crop & Save
                                        Image</button>
                                    <button type="button" class="btn btn-danger" id="delete-btn">Delete Image</button>

                                    <!-- Preview for Cropped Image -->
                                    <div class="mt-3">
                                        <h5>Cropped Image Preview:</h5>
                                        <img id="cropped-preview" src="" alt="Cropped image preview">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="addCategory()">Add Category</button>
                        <button type="button" class="btn btn-secondary" onclick="hideAddCategoryPage()">Cancel</button>
                    </form>
                </div>
            </div>
        </div>


        <!-- View Category Modal -->
        <div id="viewCategoryModal" style="display: none;">

            <div class="d-flex justify-content-center align-items-center">
                <div class="p-5 col-md-6 border rounded shadow-sm" style="background-color: #f8f9fa;">
                    <h2>View Category</h2>
                    <div id="categoryDetails">
                        <p><strong>Category ID:</strong> <span id="viewCategoryId"></span></p>
                        <p><strong>Category Name:</strong> <span id="viewCategoryName"></span></p>
                        <p><strong>Description:</strong> <span id="viewCategoryDescription"></span></p>
                        <p><strong>Date Added:</strong> <span id="viewCategoryDate"></span></p>
                        <p><strong>Status:</strong> <span id="viewCategoryStatus"></span></p>
                        <p><strong>Image:</strong></p>
                        <img id="viewCategoryImage" src="" alt="Category Image" style="width: 100px; height: 100px;" />
                    </div>
                    <button type="button" class="btn btn-secondary" onclick="hideViewCategoryPage()">Close</button>
                </div>
            </div>
        </div>


        <!-- Edit Category Modal -->
        <div id="editCategoryModal" style="display: none;">

            <div class="d-flex justify-content-center align-items-center">
                <div class="p-5 col-md-6 border rounded shadow-sm" style="background-color: #f8f9fa;" >
                    <h2>Edit Category</h2>
                    <form id="editCategoryForm">
                        <div class="mb-3">
                            <label for="editCategoryName">Category Name:</label>
                            <input type="text" class="form-control" id="editCategoryName" required />
                        </div>
                        <div class="mb-3">
                            <label for="editCategoryDescription">Description:</label>
                            <textarea class="form-control" id="editCategoryDescription" rows="3" required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="editCategoryDate">Date Added:</label>
                            <input type="date" class="form-control" id="editCategoryDate" required />
                        </div>
                        <div class="mb-3">
                            <label for="editCategoryStatus">Status:</label>
                            <select class="form-control" id="editCategoryStatus" required>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <!-- Image Upload and Cropping Section -->
                            <div class="img-container">

                                <div class="form-container mb-4">
                                    <!-- File Input to Upload Image -->
                                    <div class="mb-3 col-md-6">
                                        <label for="new-image" class="form-label">Upload New Image</label>
                                        <input type="file" class="form-control" id="new-image" accept="image/*">
                                    </div>

                                    <!-- Image Container for Cropping -->
                                    <div class="image-container">
                                        <img id="image" src="" alt="Upload an image to crop">
                                    </div>

                                    <!-- Buttons for Crop and Delete -->
                                    <button type="button" class="btn btn-success" id="crop-btn">Crop & Save
                                        Image</button>
                                    <button type="button" class="btn btn-danger" id="delete-btn">Delete Image</button>

                                    <!-- Preview for Cropped Image -->
                                    <div class="mt-3">
                                        <h5>Cropped Image Preview:</h5>
                                        <img id="cropped-preview" src="" alt="Cropped image preview">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="updateCategory()">Update
                            Category</button>
                        <button type="button" class="btn btn-secondary" onclick="hideEditCategoryPage()">Cancel</button>
                    </form>
                </div>
            </div>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>



    <script src="/admin/Script/category.js"></script>

</body>

</html>