<%-include("../../views/partials/admin/admin-header")%>

<link rel="stylesheet" href="/stylesheets/adminStyle.css">
   

<section>
    
    <!-- Content -->
    <div class="content">
        <!-- Dashboard Section -->
        <div id="dashboard-content">
            <h1>Dashboard</h1>
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="chart-container">
                                <canvas id="totalRevenueChart" width="200" height="200"></canvas>
                            </div>
                            <div class="text-right">
                                <h5 class="card-title">Total Revenue</h5>
                                <h3 id="totalRevenueValue">$50,000</h3>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body d-flex justify-content-between align-items-center">
                            <div class="chart-container">
                                <canvas id="userCountChart" width="200" height="200"></canvas>
                            </div>
                            <div class="text-right">
                                <h5 class="card-title">User Count</h5>
                                <h3 id="userCountValue">1,200</h3>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-12" style="display: none;">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Product Sales Report</h5>
                            <div class="form-inline ">
                                <label for="salesReportDate" class="form-label">Select Month:</label>
                                <input type="month" class="form-control" id="salesReportDate" style="width: 25%;">
                                <button class="btn btn-primary ms-2">Filter</button>
                            </div>
                            <table class="table table-bordered table-hover mt-3">
                                <thead>
                                    <tr>
                                        <th>Product Image</th>
                                        <th>Product Name</th>
                                        <th>Price</th>
                                        <th>Quantity Sold</th>
                                        <th>Stock Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Example row -->
                                    <tr>
                                        <td><img src="/public/images/doll4.jpg" alt="Product" class="img-fluid"
                                                style="max-width: 100px;"></td>
                                        <td>Product 1</td>
                                        <td><i class="fas fa-rupee-sign"></i>10</td>
                                        <td>100</td>
                                        <td>In Stock</td>
                                    </tr>
                                    <tr>
                                        <td><img src="/public/images/dollA16.jpg" alt="Product" class="img-fluid"
                                                style="max-width: 100px;"></td>
                                        <td>Product 2</td>
                                        <td><i class="fas fa-rupee-sign"></i>10</td>
                                        <td>150</td>
                                        <td>In Stock</td>
                                    </tr>
                                    <!-- Add more rows as needed -->
                                </tbody>
                            </table>

                            <button class="btn btn-secondary mt-3">Product Details</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       

        <!-- Add other sections (Products, Customers, Offers, Coupons, Categories) here with similar structure -->
    </div>
</section>



    <script src="/admin/Script/dashboard.js"></script>


    <%-include("../../views/partials/admin/admin-footer")%>