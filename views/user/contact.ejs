  <!-- Back Button -->
  <div class="back-button">
    <a href="javascript:history.back()" class="btn">
        <i class="fas fa-arrow-left mr-2"></i>
    </a>
  </div>

  

  <div class="container mt-5">
    <h2 class="mb-4 text-center">Contact Us</h2>
    
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <div class="card shadow-lg">
                <div class="card-body">
                    <form>
                        <div class="mb-3 position-relative">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control ps-5" id="name" placeholder="Your Name" required>
                        </div>
                        <div class="mb-3 position-relative">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control ps-5" id="email" placeholder="Your Email" required>
                        </div>
                        <div class="mb-3 position-relative">
                            <label for="subject" class="form-label">Subject</label>
                            <input type="text" class="form-control ps-5" id="subject" placeholder="Subject" required>
                        </div>
                        <div class="mb-3 position-relative">
                            
                            <label for="message" class="form-label">Message</label>
                            <textarea class="form-control ps-5" id="message" rows="4" placeholder="Your Message" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12 text-center">
            <div class="contact-info bg-light p-4 rounded shadow-lg">
                <h4>Contact Information</h4>
                <p><i class="fas fa-phone"></i> <strong>Phone:</strong> +1 (234) 567-890</p>
                <p><i class="fas fa-envelope"></i> <strong>Email:</strong> support@knitzy.com</p>
                <p><i class="fas fa-map-marker-alt"></i> <strong>Address:</strong> 123 Knitzy Lane, Crochet City, CA 12345</p>
            </div>
        </div>
    </div>
</div>


   

