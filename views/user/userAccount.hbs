  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  
  <script>
            function displayAddAddressForm() {
    document.getElementById('addressFormTitle').innerText = 'Add Address';
    clearForm();
    var myModal = new bootstrap.Modal(document.getElementById('addressFormModal'), {
        keyboard: false
    });
    myModal.show();
}

function displayEditAddressForm() {
    document.getElementById('addressFormTitle').innerText = 'Edit Address';
    clearForm();
    var myModal = new bootstrap.Modal(document.getElementById('addressFormModal'), {
        keyboard: false
    });
    myModal.show();
}

function clearForm() {
    document.getElementById('name').value = '';
    document.getElementById('phone').value = '';
    document.getElementById('address').value = '';
    document.getElementById('city').value = '';
    document.getElementById('state').value = '';
    document.getElementById('pincode').value = '';
    document.getElementById('country').value = '';
}

  </script>

</body>
