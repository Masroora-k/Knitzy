  <div class="container  mt-4">
    <div class="row">
        <div class=" mt-3 col-lg-6 col-md-12 col-sm-12 mb-4">
            <div class="checkout">
                <h6 class="mb-4" style="color: rgb(150, 148, 147);">Checkout</h6>
                <!-- Shipping Address Form -->
                <div class=" p-2 ">
                    <h4 class="mb-3" >Shipping Address</h4>
                    <form class="address">
                        <div class="mb-2">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="fullName" required>
                        </div>
                        <div class="mb-2">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="text" class="form-control" id="phone" required>
                        </div>
                        <div class="mb-2">
                            <label for="address" class="form-label">Address</label>
                            <textarea class="form-control" id="address" rows="3" required></textarea>
                        </div>
                        <div class="row">
                            <div class="mb-2 col-sm-6">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" id="city" required>
                            </div>
                            <div class="mb-2 col-sm-6">
                                <label for="state" class="form-label">State</label>
                                <input type="text" class="form-control" id="state" required>
                            </div>
                            <div class="mb-2 col-sm-6">
                                <label for="pin" class="form-label">Pin Code</label>
                                <input type="text" class="form-control" id="pin" required>
                            </div>
                            <div class="mb-2 col-sm-6">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" class="form-control" id="country" required>
                            </div>
                        </div>
                        <div class="d-flex flex-column flex-md-row justify-content-between mt-4">
                            <button type="button" class="btn btn-primary mb-2 mb-md-0">Add New Address</button>
                            <button type="submit" class="btn confirm">Deliver to This Address</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        
            <div class=" mt-4 col-lg-6 col-md-12 col-sm-12">
                
                        <!-- Order Summary -->
                    <div class="checkout">
                        <h4 class="mb-3">Order Summary</h4>
                        <div class="order-summary">
                            <div class="d-flex mb-3" style="border: 1px solid rgb(226, 222, 222); padding: 10px; border-radius: 10px;">
                                <img src="/public/images/dollA11.jpg" alt="Product Image" class="product-image">
                                <div class="ms-3">
                                    <h6>Cute Animal Doll</h6>
                                    <p>Price: <i class="fas fa-rupee-sign" style="font-size: .899rem;"></i><span style="font-size: 1rem; font-weight: bold;">600.00</span></p>
                                    <p>Quantity: <span style="font-size: 1rem; font-weight: bold;">1</span></p>
                                    <p>Total: <i class="fas fa-rupee-sign" style="font-size: .899rem;"></i><span style="font-size: 1rem; font-weight: bold;">600.00</span></p>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-primary btn-lg btn-block mt-3 " type="button">Proceed to Payment</button>
                    </div>
                
            </div>
      </div>
  </div>
  

