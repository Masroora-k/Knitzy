
<%-include("../../views/partials/user/user-header")%>

  <link rel="stylesheet" href="/stylesheets/payment.css">



  <div class="container payment-page mt-5">
    <h2 class="mb-4 text-center">Payment</h2>
    <div class="row mb-2  d-flex justify-content-center">
        <div class="col-md-6">
            <h4>Select Payment Method</h4>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="creditCard" checked>
                <label class="form-check-label" for="creditCard">
                    Credit/Debit Card
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="netBanking">
                <label class="form-check-label" for="netBanking">
                    Net Banking
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="upi">
                <label class="form-check-label" for="upi">
                    UPI
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="paymentMethod" id="cod">
                <label class="form-check-label" for="cod">
                    Cash on Delivery
                </label>
            </div>
        </div>
    </div>

    <!-- Credit/Debit Card Section -->
    <div class="row payment-form d-flex justify-content-center " id="creditCardForm">
        <div class="payment-method col-md-6 col-sm-12 mb-4">
            <h4 class="text-center">Credit/Debit Card Details</h4>
            
                <a href="/placeOrder?paymentMethod=Credit/Debit" class="btn btn-primary btn-block">Pay with Card</a>
           
        </div>
    </div>

    <!-- Net Banking Section -->
    <div class="row payment-form d-flex justify-content-center d-none" id="netBankingForm">
        <div class="payment-method col-md-6 col-sm-12 mb-4">
            <h4 class="text-center">Net Banking</h4>
           
                <a href="/placeOrder?paymentMethod=Net Banking" class="btn btn-primary btn-block">Proceed with Net Banking</a>
            
        </div>
    </div>

    <!-- UPI Section -->
    <div class="row payment-form d-flex justify-content-center d-none" id="upiForm">
        <div class="payment-method col-md-6 col-sm-12 mb-4">
            <h4 class="text-center">UPI Payment</h4>
            
                <a href="/placeOrder?paymentMethod=UPI" class="btn btn-primary btn-block">Pay with UPI</a>
            
        </div>
    </div>

    <!-- Cash on Delivery Section -->
    <div class="row payment-form d-flex justify-content-center d-none" id="codForm">
        <div class="payment-method col-md-6 col-sm-12 mb-4">
            <h4 class="text-center">Cash on Delivery</h4>
            <p class="text-center">You can pay with cash when your order is delivered.</p>
            <a href="/placeOrder?paymentMethod=COD" class="btn btn-primary btn-block">Select Cash on Delivery</a>
        </div>
    </div>
</div>
  
    


<%-include("../../views/partials/user/user-footer")%>


  <script>
    document.querySelectorAll('input[name="paymentMethod"]').forEach((input) => {
        input.addEventListener('change', function () {
            document.querySelectorAll('.payment-form').forEach((form) => {
                form.classList.add('d-none');
            });
            if (this.id === 'creditCard') {
                document.getElementById('creditCardForm').classList.remove('d-none');
            } else if (this.id === 'netBanking') {
                document.getElementById('netBankingForm').classList.remove('d-none');
            } else if (this.id === 'upi') {
                document.getElementById('upiForm').classList.remove('d-none');
            } else if (this.id === 'cod') {
                document.getElementById('codForm').classList.remove('d-none');
            }
        });
    });
</script>

