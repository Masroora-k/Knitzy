<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/wallet.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  <title>Knitzy - shop</title>
  
</head>
<body>
  <!-- Navigation Bar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
    <a class="navbar-brand" href="#"><h4 class="navbar-logo">Knitzy</h4></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <input type="text" class="form-control" placeholder="Search" style="width: 200px;">
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-home"></i> Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-shopping-cart"></i> Shop</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-box"></i> Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-heart"></i> Wishlist</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-shopping-basket"></i> Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#"><i class="fas fa-user"></i> Account</a>
        </li>
        <li class="nav-item">
          <a class="nav-link logout_li text-white" href="#">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Back Button -->
  <div class="back-button">
    <a href="javascript:history.back()" class="btn">
        <i class="fas fa-arrow-left mr-2"></i>
    </a>
  </div>

  <div class="container mt-5">
    <h1 class="text-center"> Wallet</h1>
    <div class="row">
        <div class="col-md-6 mx-auto" style="padding: 20px; background-color: rgb(253, 252, 252); text-align: center; border: 1px solid rgb(121, 119, 119); border-radius: 20px;">
            <h4 class="mt-4">Current Balance: $<span id="balance">100</span></h4>
        </div>
    </div>

    <div class="mt-5">
        <h5>Add Money</h5>
        <form id="addMoneyForm">
            <div class="mb-3">
                <label for="amount" class="form-label">Amount</label>
                <input type="number" class="form-control" id="amount" required>
            </div>
            <div class="mb-3">
                <label for="paymentSource" class="form-label">Payment Source</label>
                <select class="form-select" id="paymentSource" required>
                    <option value="" disabled selected>Select payment source</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Debit Card">Debit Card</option>
                    <option value="PayPal">PayPal</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Add Money</button>
        </form>
    </div>

    <div class="mt-5">
        <h5>Withdraw Money</h5>
        <form id="withdrawMoneyForm">
            <div class="mb-3">
                <label for="withdrawAmount" class="form-label">Amount</label>
                <input type="number" class="form-control" id="withdrawAmount" required>
            </div>
            <div class="mb-3">
                <label for="withdrawMethod" class="form-label">Withdrawal Method</label>
                <select class="form-select" id="withdrawMethod" required>
                    <option value="" disabled selected>Select withdrawal method</option>
                    <option value="Bank Transfer">Bank Transfer</option>
                    <option value="PayPal">PayPal</option>
                </select>
            </div>
            <button type="submit" class="btn btn-danger">Withdraw Money</button>
        </form>
    </div>

    <div class="mt-5">
        <h5>Transaction History</h5>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Transaction ID</th>
                    <th scope="col">Description</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody id="transactionTable">
                <tr>
                    <td>2024-10-01</td>
                    <td>TID001</td>
                    <td>Add Money</td>
                    <td>$50</td>
                    <td><span class="status completed">Completed</span></td>
                </tr>
                <tr>
                    <td>2024-10-02</td>
                    <td>TID002</td>
                    <td>Withdraw Money</td>
                    <td>$30</td>
                    <td><span class="status pending">Pending</span></td>
                </tr>
                <tr>
                    <td>2024-10-03</td>
                    <td>TID003</td>
                    <td>Refund</td>
                    <td>$20</td>
                    <td><span class="status failed">Failed</span></td>
                </tr>
                <tr id="showMoreRow1" style="display: none;">
                    <td>2024-10-04</td>
                    <td>TID004</td>
                    <td>Add Money</td>
                    <td>$25</td>
                    <td><span class="status completed">Completed</span></td>
                </tr>
                <tr id="showMoreRow2" style="display: none;">
                    <td>2024-10-05</td>
                    <td>TID005</td>
                    <td>Withdraw Money</td>
                    <td>$10</td>
                    <td><span class="status completed">Completed</span></td>
                </tr>
                <tr id="showMoreRow3" style="display: none;">
                    <td>2024-10-06</td>
                    <td>TID006</td>
                    <td>Add Money</td>
                    <td>$15</td>
                    <td><span class="status completed">Completed</span></td>
                </tr>
            </tbody>
        </table>
        <button id="viewAllBtn" class="btn btn-link">View All Transactions</button>
    </div>
</div>





   

  <!-- Footer -->
  <footer class="bg-light text-center mt-5">
    <div class="container p-4">
      <div class="row">
        <div class="col-md-6 mb-4">
          <h5 class="text-uppercase font-weight-bold mb-3">Knitzy</h5>
          <ul class="list-unstyled d-flex justify-content-center">
            <li class="mx-3"><a href="#!" class="text-dark">About Us</a></li>
            <li class="mx-3"><a href="#!" class="text-dark">Contact Us</a></li>
          </ul>
        </div>
        <div class="col-md-6 mb-4">
          <h5 class="text-uppercase font-weight-bold mb-3">Follow Us</h5>
          <ul class="list-unstyled d-flex justify-content-center">
            <li class="mx-3"><a href="#!" class="text-dark"><i class="fab fa-facebook fa-lg"></i></a></li>
            <li class="mx-3"><a href="#!" class="text-dark"><i class="fab fa-twitter fa-lg"></i></a></li>
            <li class="mx-3"><a href="#!" class="text-dark"><i class="fab fa-instagram fa-lg"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="col-md-12">
        <img src="/public/images/knity2.png" alt="" style="width: 10%;">

      </div>
  
      <div class="text-center p-3 mt-4" style="border-top: 1px solid #dee2e6;">
        Â© 2024 Knitzy. All rights reserved.
      </div>
    </div>
  </footer>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  <script>
    document.getElementById('viewAllBtn').addEventListener('click', function () {
        const rows = document.querySelectorAll('#transactionTable tr[id^="showMoreRow"]');
        const allTransactionsVisible = Array.from(rows).every(row => row.style.display === 'table-row');

        rows.forEach(row => {
            row.style.display = allTransactionsVisible ? 'none' : 'table-row';
        });
        this.innerText = allTransactionsVisible ? 'View All Transactions' : 'Show Less Transactions';
    });
</script>

  

</body>
</html>
