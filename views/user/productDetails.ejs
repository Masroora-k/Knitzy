

<%-include("../../views/partials/user/user-header")%>

<link rel="stylesheet" href="/stylesheets/productDetails.css">


<style>
  #imageZoom {
    width: 90%;
    height: 500px;
    position: relative;
  }
  #imageZoom img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: 0 0;
  }
  #imageZoom::after{
    display: var(--display);
    content: '';
    width: 100%;
    height: 100%;
    background-color: black;
    background-image: var(--url);
    background-size: 200%;
    background-position: var(--zoom-x) var(--zoom-y);
    position: absolute;
    left: 0;
    top: 0;
  }
</style>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active " aria-current="page"><%= product.productName%></li>
  </ol>
</nav>

  <!-- Product Details Content -->
  <div class="container product-dtls mt-5">
    <div class="row productDetails-card" style="border: 1px solid rgb(204, 201, 201); padding: 20px; border-radius: 25px;">
      <!-- Product Image Gallery -->
      <div class="col-md-6">

        <%if(product.productImage && product.productImage.length>0 ){%>
        <div class="main-image d-flex justify-content-center" id="imageZoom" style="--url: url(<%product.productImage[0]%>); --zoom-x: 0%; --zoom-y: 0%; --display: none;" > 
          
          
            <img id="mainProductImage" src="<%=product.productImage[0]%>" alt="Cute Animal Doll" class="img-fluid rounded w-90" style="height: 500px;">
          
        </div>
        <div class="thumbnail-gallery d-flex justify-content-center mt-3">
          
          <%product.productImage.forEach(function(image,index){ %>
          
            <img src="<%= image %>" alt="Image <% index + 1 %>" class="img-thumbnail me-2" style="width: 80px; cursor: pointer;" onclick="changeMainImage(this)">
          <%})%>
           
        </div>   
        <%}else{%>
          <p>No image</p>
        <%}%>
      </div>
    
      <!-- Product Information -->
      <div class="col-md-6">
        <h2 class="mb-3"><%=product.productName%></h2>
        <p class="description"><%=product.description%></p>
    
        <!-- Quantity Selection -->
        <div class="d-flex align-items-center mb-3">
          <label for="quantity" class="me-2">Quantity:</label>
          <input type="number" id="quantity" value="1" min="1" class="form-control w-25 quantity-input" style="box-shadow: none;">
        </div>
        <p>Offer: 15%</p>
      <p class="Price h4"><i class="fas fa-rupee-sign" style="font-size: 1.6rem;"></i><%=product.salePrice%></p>
        <div class="d-flex">
          <p class="stock me-4"><b>Stock: </b><%=product.quantity%> </p> 
          <%if(product.status === 'Available'){%>
            <p class="available" style="color: green;"><%=product.status%></p>
          <%}else{%>
            <p class="status" style="color: red;"><%=product.status%></p>
          <%}%>

        </div>

        
        
        <!-- Buttons -->
        <button class="btn btn-primary me-2">Add to Cart</button>
        <button class="btn buyNow-btn">Buy Now</button>
      </div>
    </div>

    <div class="row"> 
      <!-- Product Details Section -->
      <div class="col-lg-6 col-md-6 col-sm-12 p-4 mt-5 product-details-section">
        <h4 class="mb-3 product-info">Product Details</h4>
        <ul>
          <li>Material: 100% Cotton Yarn</li>
          <li>Size: <%=product.size%></li>
          <li>Color: <%=product.color%></li>
          <li>Suitable for ages 3 and up</li>
        </ul>
      </div>
      <!-- Delivery Services Section -->
      <div class="col-lg-6 col-md-6 col-sm-12 mt-lg-5 mt-md-5 mt-0 delivery-services-section">
        <h4 class="mb-3 delivery-info">Delivery Services</h4>
        <ul style="list-style: none;">
          <li><i class="fas fa-shipping-fast"></i> Free Delivery</li>
          <li><i class="fas fa-clock"></i> Delivery within 6 days</li>
          <li><i class="fas fa-ban" style="color: rgb(187, 4, 4);"></i> No Return Option</li>

        </ul>
      </div>

      <div class="review-section p-5 mt-5 col-md-12" >
        <div class=" d-flex ">
          <h2 class="me-4">Review:</h2>
          <a href="/review?id=<%=product._id%>" class=" btn star-rating">
            <span style="font-size: 2rem;  color: #ffcc00;">&#9733; &#9733; &#9733;</span>
            <span style="font-size: 2rem; color: #ccc;"> &#9733; &#9733;  
          </span>
          <span style="font-size: 2rem; margin-left: 10px; color: rgb(109, 107, 107);">  &rarr;</span></a>
  
        </div>
      </div>

    </div>

    

    <!-- Similar Products Section -->
    <div class="mt-5" id="products">
      <h4 class="similar-pro">Similar Products</h4>
      <div class=" product-cards-container">

        <%for(let i=0; i<products.length; i++){%>

        <div class="product-card">
          <a href="/productDetails?id=<%=products[i]._id%>">
            <img src="<%=products[i].productImage[0]%>" class="product-card-img" alt="Product Image">
          </a>
          <div class="product-card-body">
            <h5 class="product-card-title"><%=products[i].productName%></h5>
            <p class="product-card-text"><%=products[i].description%></p>
            <p class="product-card-price"><i class="fas fa-rupee-sign"></i><%=products[i].salePrice%></p>
            <button class="wishlist-btn">â™¡</button>
            <a href="#" class="btn btn-primary" style="border-radius: 8px;"><i class="fas fa-shopping-cart mr-2"></i>Add
              to Cart</a>
          </div>
        </div>
        
        <%}%>

      </div>
    </div>
  </div>

  <script>
    function changeMainImage(thumbnail) {
  const mainImage = document.getElementById('mainProductImage');
  const imageZoom = document.getElementById('imageZoom');
  
  // Change the main image src
  mainImage.src = thumbnail.src;

  // Update the background image for zoom effect
  imageZoom.style.setProperty('--url', `url(${thumbnail.src})`);
}

// Image zoom functionality
let imageZoom = document.getElementById('imageZoom');
imageZoom.addEventListener('mousemove', (event) => {
  
  imageZoom.style.setProperty('--display', 'block');

  let pointer = {
    x: (event.offsetX *100)/ imageZoom.offsetWidth,
    y: (event.offsetY *100)/ imageZoom.offsetHeight
  }
  imageZoom.style.setProperty('--zoom-x', pointer.x + '%');
  imageZoom.style.setProperty('--zoom-y', pointer.y + '%');
});

imageZoom.addEventListener('mouseout', () => {
  imageZoom.style.setProperty('--display', 'none');
});

  </script>
  

 
  <%-include("../../views/partials/user/user-footer")%>