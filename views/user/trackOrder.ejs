  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function() {
    const orderStatus = "shipped"; // This should be dynamically set based on your order status logic
    const statusOrder = ["placed", "processed", "shipped", "out-for-delivery"];
    const timelineItems = document.querySelectorAll('.timeline-item');

    let completed = true;

    timelineItems.forEach(item => {
        const status = item.dataset.status;
        if (statusOrder.indexOf(status) <= statusOrder.indexOf(orderStatus) && completed) {
            item.classList.add('completed');
        }
    });
});

  </script>

