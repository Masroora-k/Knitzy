<%-include("../../views/partials/user/user-header")%>

<link rel="stylesheet" href="/stylesheets/userAccount.css">
  
  <div class="container track mt-5">
    <h2 class="mb-4 text-center">Track Your Order</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Order ID: 12345</h5>
                    <p class="card-text"><strong>Product:</strong> Crochet Doll</p>
                    <p class="card-text"><strong>Expected Delivery Date:</strong> 2024-10-20</p>
                    <ul class="timeline">
                        <li class="timeline-item" data-status="placed">
                            <span class="timeline-date">2024-10-10</span>
                            <span class="timeline-content">Order Placed</span>
                        </li>
                        <li class="timeline-item" data-status="processed">
                            <span class="timeline-date">2024-10-11</span>
                            <span class="timeline-content">Order Packed</span>
                        </li>
                        <li class="timeline-item" data-status="shipped">
                            <span class="timeline-date">2024-10-12</span>
                            <span class="timeline-content">Order Shipped</span>
                        </li>
                        <li class="timeline-item" data-status="out-for-delivery">
                            <span class="timeline-date">2024-10-14</span>
                            <span class="timeline-content">Out for Delivery</span>
                        </li>
                    </ul>
                </div>
            </div>
           <div class="d-flex justify-content-center">
            <button class="btn btn-primary w-40">Back to Orders</button>
           </div>
        </div>
    </div>
</div>



      
    

 

<%-include("../../views/partials/user/user-footer")%>

